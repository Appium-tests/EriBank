<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="The mortgage summary view">

    <listeners>
        <listener class-name="qa.listeners.Listener"/>
    </listeners>


    <test name="Swipping the list">
        <parameter name="fileName" value="EB_Sections.json"/>

        <classes>
            <class name="mortgagesummaryview.SwipingTest"/>
        </classes>
    </test>

    <test name="Selecting items">
        <parameter name="fileName" value="EB_Sections.json"/>

        <classes>
            <class name="mortgagesummaryview.SelectingItemsTest"/>
        </classes>
    </test>

    <test name="Buttons">
        <classes>
            <class name="factories.TestMortgageSummaryFactory"/>
        </classes>
    </test>

</suite>